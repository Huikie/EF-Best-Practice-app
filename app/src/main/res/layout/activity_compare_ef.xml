<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222831"
    android:orientation="vertical"
    tools:context=".CompareEfActivity">


    <TextView
        android:id="@+id/title_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="12dp"
        android:text="Your university's EF"
        android:textColor="#00adb5"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/no_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:padding="6dp"
        android:text="You didn't put in any data!"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="18sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/built_land"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:padding="6dp"
        android:textColor="#eeeeee"
        android:textColorHint="#7feeeeee"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/efpc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:padding="6dp"
        android:textColor="#eeeeee"
        android:textColorHint="#7feeeeee"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/energy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:padding="6dp"
        android:textColor="#eeeeee"
        android:textColorHint="#7feeeeee"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/food"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:padding="6dp"
        android:textColor="#eeeeee"
        android:textColorHint="#7feeeeee"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/mobility"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:padding="6dp"
        android:textColor="#eeeeee"
        android:textColorHint="#7feeeeee"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/paper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:padding="6dp"
        android:textColor="#eeeeee"
        android:textColorHint="#7feeeeee"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/waste"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:padding="6dp"
        android:textColor="#eeeeee"
        android:textColorHint="#7feeeeee"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/water"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:padding="6dp"
        android:textColor="#eeeeee"
        android:textColorHint="#7feeeeee"
        android:textSize="18sp" />

</LinearLayout>