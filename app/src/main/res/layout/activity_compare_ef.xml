<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#222831">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#222831"
        android:orientation="vertical"
        tools:context=".CompareEfActivity">


        <TextView
            android:id="@+id/title_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="12dp"
            android:textColor="#00adb5"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/no_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="6dp"
            android:text="You didn't put in any data!"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="18sp"
            android:visibility="gone" />

        <android.support.v7.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            app:columnCount="2">

            <ImageView
                android:id="@+id/bl_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                app:srcCompat="@drawable/built_land" />

            <TextView
                android:id="@+id/built_land"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:padding="6dp"
                android:textColor="#eeeeee"
                android:textColorHint="#7feeeeee"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/efpc_image"
                android:layout_width="36dp"
                android:layout_height="47dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                app:srcCompat="@drawable/person" />

            <TextView
                android:id="@+id/efpc"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:padding="6dp"
                android:textColor="#eeeeee"
                android:textColorHint="#7feeeeee"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/energy_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                app:srcCompat="@drawable/energie" />

            <TextView
                android:id="@+id/energy"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:padding="6dp"
                android:textColor="#eeeeee"
                android:textColorHint="#7feeeeee"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/food_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                app:srcCompat="@drawable/food" />

            <TextView
                android:id="@+id/food"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:padding="6dp"
                android:textColor="#eeeeee"
                android:textColorHint="#7feeeeee"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/mobility_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                app:srcCompat="@drawable/mobility" />

            <TextView
                android:id="@+id/mobility"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:padding="6dp"
                android:textColor="#eeeeee"
                android:textColorHint="#7feeeeee"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/paper_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                app:srcCompat="@drawable/paper" />

            <TextView
                android:id="@+id/paper"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:padding="6dp"
                android:textColor="#eeeeee"
                android:textColorHint="#7feeeeee"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/waste_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                app:srcCompat="@drawable/waste" />

            <TextView
                android:id="@+id/waste"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:padding="6dp"
                android:textColor="#eeeeee"
                android:textColorHint="#7feeeeee"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/water_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                app:srcCompat="@drawable/water" />

            <TextView
                android:id="@+id/water"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:padding="6dp"
                android:textColor="#eeeeee"
                android:textColorHint="#7feeeeee"
                android:textSize="18sp" />

        </android.support.v7.widget.GridLayout>

    </LinearLayout>
</ScrollView>