<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#222831"
android:orientation="vertical"
tools:context=".MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="12dp"
        android:text="Ecological footprint university best practice"
        android:textColor="#00adb5"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/overview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="12dp"
        android:background="#00adb5"
        android:onClick="ToOverview"
        android:text="Best practice overview per component"
        android:textColor="#eeeeee"
        android:textSize="18sp" />

    <Button
        android:id="@+id/calculate_compare"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="12dp"
        android:background="#00adb5"
        android:onClick="CalculateCompare"
        android:text="Calculate EF and compare with other universities"
        android:textColor="#eeeeee"
        android:textSize="18sp" />


</LinearLayout>